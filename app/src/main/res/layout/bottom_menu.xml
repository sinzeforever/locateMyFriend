<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/bottom_menu_style"
    android:alpha="0.7"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/map_button"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:src="@drawable/location"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:baseline="@dimen/activity_vertical_margin"
            android:alpha="0.5" />
        <ImageView
            android:id="@+id/my_group_button"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:src="@drawable/my_group"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:alpha="0.5" />
        <ImageView
            android:id="@+id/add_group_button"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:src="@drawable/add_group"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:alpha="0.5" />
        <ImageView
            android:id="@+id/setting_button"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:src="@drawable/setting"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:alpha="0.5" />



    </LinearLayout>
</RelativeLayout>