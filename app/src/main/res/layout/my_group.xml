<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:background="#0D0D01"
        android:gravity="center"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:text="My Group List"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@color/main_orange"
        android:text="Disable All Group"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:id="@+id/myGroupDisableAllButton"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/myGroupNoGroupLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are not in any group now"
            android:textSize="20dp"
            android:textColor="@color/dark_gray"
            android:layout_marginBottom="10dp" />
        <Button
            android:id="@+id/myGroupAddGroupButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Create A Group"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/main_orange"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/groupList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</LinearLayout>