<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFE018"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:textAlignment="center"
    android:clickable="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L@cal Your Friends"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#333333"
        android:width="300dp"
        android:height="100dp"
        android:gravity="center"
        android:layout_above="@+id/textView"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your id"
        android:id="@+id/textView"
        android:layout_marginBottom="32dp"
        android:textSize="20dp"
        android:layout_above="@+id/idInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idInput"
        android:width="200dp"
        android:height="40dp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login"
        android:id="@+id/confirmButton"
        android:layout_marginTop="41dp"
        android:background="@drawable/login_button"
        android:textColor="#333333"
        android:textSize="20dp"
        android:width="80dp"
        android:height="40dp"
        android:layout_below="@+id/idInput"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="incorrect id"
        android:textColor="#ee0000"
        android:textSize="10dp"
        android:id="@+id/errorMsg"
        android:layout_below="@+id/idInput"
        android:layout_alignLeft="@+id/idInput"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible" />


</RelativeLayout>
